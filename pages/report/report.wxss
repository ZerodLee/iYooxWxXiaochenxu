/* pages/report/report.wxss */
page,.page{
    width: 100vw;
    height: 100vh;
}
.page{
    /* display: flex;
    flex-direction: column; */
    position: relative;
    overflow-y: auto;
    padding-bottom: 12vw;
}
.answer-card{
    border-top: 5px solid #f1f1f1;
    padding: 5vw;
}
.card-head{
    margin-bottom: 5vw;
}
.answer-card .options,.answers{
    display: flex;
    flex-wrap: wrap;
}
.options .item{
    flex-shrink: 0;
    width: 10vw;
    height: 10vw;
    margin: 2.5vw 4vw;
    border-radius: 10vw;
    text-align: center;
    line-height: 10vw;
    background-color: #ccc;
    color: #fff;
}
.options .item.right{
    background-color: #44b549
}
.options .item.wrong{
    background-color: #d64e4e
}

.answers .item{
    flex-shrink: 0;
    width: 14vw;
    margin: 2.5vw 2vw;
    line-height: 10vw; 
}
.check-btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    display: flex;
}
.check-btn>view{
    width: 50vw;
    height: 12vw;
    background: #fff;
    font-size: 16px;
    text-align: center;
    line-height: 12vw;
    border-top: 1px solid #ccc;
}
.check-btn .check{
   background-color: #44b549; 
   color: #fff;
}
.check-btn .contieun{
    color: #333;
}
